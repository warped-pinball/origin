<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.origin" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Origin</name>
    <content src="index.html" />
    <plugin name="cordova-plugin-ns0m-nfc" />
    <plugin name="phonegap-plugin-barcodescanner" />
    <plugin name="cordova-plugin-deeplinks">
        <variable name="URL_SCHEME" value="poc" />
        <variable name="DEEPLINK_SCHEME" value="https" />
        <variable name="DEEPLINK_HOST" value="warpedpinball.com" />
    </plugin>
    <plugin name="cordova-plugin-chrome-apps-sockets-udp" />
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-splashscreen" />
    <icon src="www/logo.png" />
    <!-- Use a plain black background during startup and hide default Cordova icon -->
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="@drawable/logo" />
    <preference name="AndroidWindowSplashScreenBackgroundColor" value="#0172ad" />
    <preference name="SplashScreenBackgroundColor" value="#0172ad" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <splash src="www/logo.png" />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="android-compileSdkVersion" value="35" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <universal-links>
        <host name="warpedpinball.com" scheme="https">
            <path url="*" />
        </host>
    </universal-links>
    <deep-link scheme="https" host="warpedpinball.com" path="*" />
    <platform name="android">
        <hook type="after_prepare" src="scripts/copy-logo.js" />
    </platform>
</widget>
